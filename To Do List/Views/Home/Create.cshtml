@model Tasks

<form method="post">

    <div class="border container p-4 mt-4">
        <h2 class="text-primary mb-4">Create Task</h2>

        <div class="mb-3">
            <label asp-for="TaskTitle" class="form-label">Task Title</label>
            <input asp-for="TaskTitle" class="form-control rounded-3" />
            <span asp-validation-for="TaskTitle" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsCompleted" type="checkbox" id="Iscompleted" class="form-check-input rounded-3" />
            <label asp-for="IsCompleted" for="Iscompleted" class="form-check-label ml-2">Completed</label>
            <span asp-validation-for="IsCompleted" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control rounded-3" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex justify-content-between">
            <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>

</form>